@model Product

<h1>Delete Product</h1>

<h4>Are you sure, you want to delete the product "@Model.Name"?</h4>

<form asp-controller="product" asp-action="DeleteConfirm" method="post">
    <input asp-for="Id"hidden/>

    <button type="submit" class="btn btn-danger">Delete Product</button>
</form>


<a class="btn btn-secondary mt-3" asp-action="Index" asp-controller="product">Back to List</a>